.widget{
    /*所有cell承载视图 设置相对位置 和约束*/
    position: relative;
    padding-top: 13px;
    padding-bottom: 13px;
    padding-left: 20px;
    padding-right: 20px;
}
.widget__arrow{
    /*下拉下单元素中的箭头相对菜单元素绝对位置 设置约束*/
    position: absolute;
    top: 14px;
    right: 22px;
    width: 8px;
    height: 16px;
}
.widget__line{
    /*设置下拉菜单元素之间的分割线*/
    content: " ";
    position: absolute;
    left: 20px;
    bottom: 0;
    right: 20px;
    height: 1rpx;
    background-color: #FFFFFF;
}